{
	"extends": [
		"../../tsconfig.json",
		"@vue/tsconfig/tsconfig.dom.json"
    ],
	"include": [
      "env.d.ts", "src/**/*", "src/**/*.vue"],
	"exclude": ["node_modules",
      "dist", "src/**/__tests__/*"],
	"compilerOptions": {
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "bundler",
		"allowDefaultProject": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
	}
}
